<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rental_Movie_Xamarin.MovieDetail"
             Title="Movie detail">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="title" HorizontalOptions="Center" FontSize="Medium" FontAttributes="Bold"/>
            <Label x:Name="description"/>
            <Label Text="Actors" HorizontalOptions="Center" FontSize="Medium"/>
            <ListView x:Name="actorslist"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>